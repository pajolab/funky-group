<Window x:Class="FunkyBus.GlavniProzor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunkyBus"
        mc:Ignorable="d"
        Title="FunkyBus - Glavni Prozor" Height="450" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFD6A92C">
        <Label Content="Dobro došao:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Bahnschrift Light"/>
        <Label x:Name="txtKorisnik" Content="Korisnik" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Bahnschrift Light"/>
        <Button x:Name="btnMojeKarte" Content="Moje karte" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Height="75" FontSize="36" Background="#FFFFE777" FontFamily="Bahnschrift Light" Click="btnMojeKarte_Click" />
        <Button x:Name="btnKupi" Content="Kupi Kartu" HorizontalAlignment="Center" Margin="0,260,0,0" VerticalAlignment="Top" Height="75" FontSize="36" Background="#FFFFE777" FontFamily="Bahnschrift Light" Click="btnKupi_Click" />
    </Grid>
</Window>
